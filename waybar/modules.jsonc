{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 3
    }
  },
  "hyprland/language": {
    "format": "ÔÑú   {}",
    "format-en": "US",
    "format-pt": "BR ÔÅ± "
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "rewrite": {
      "Kitty": "Terminal"
    }
  },
  "sway/language": {
    "format": "{}",
    "on-click": "swaymsg input type:keyboard xkb_switch_layout next"
  },
  "hyprland/window": {
    "rewrite": {
      "(.*) ‚Äî Mozilla Firefox": "üåé $1"
    },
    "separate-outputs": true
  },
  // Updates Count
  "custom/updates": {
    "format": "ÔÇ´  {}",
    "escape": true,
    "return-type": "json",
    "exec": "~/.config/scripts/updates.sh",
    "restart-interval": 30,
    "on-click": "kitty --session sessions/installupdates"
  },
  // Power Menu
  "custom/exit": {
    "format": "Û∞ê•",
    "on-click": "wlogout",
    "tooltip": false
  },
  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  "clock": {
    "format": "{:%b %d - %R}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "actions": {
      // TODO
      "on-click": "cat ~/temp.txt"
    }
  },
  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´   {signalStrength}%",
    "format-ethernet": "Ôûñ  {ipaddr}",
    "format-disconnected": "Not connected", //An empty format will hide the module.
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
